{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Program",
            "type": "shell",
            "command": "cd src/ && make ",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean Program",
            "type": "shell",
            "command": "cd src/ && make clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Compile Shaders",
            "type": "shell",
            "command": "/home/junji/vulkan/x86_64/bin/glslangValidator",
            "args": [
                "./default.vert"
            ],
            "options": {
                "cwd": "${workspaceFolder}/shaders"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}